{
	"extends": ["airbnb", "prettier", "prettier/react"],
	"parser": "babel-eslint",
	"env": {
		"jest": true
	},
	"globals": {
		"window": true,
		"document": true
	},
	"settings": {
		"import/resolver": {
			"node": {
				"paths": ["./src"],
				"extensions": [".js", ".jsx", ".ts", ".tsx"]
			}
		}
	},
	"rules": {
		"import/no-unresolved": 0,
		"react/jsx-filename-extension": [1, { "extensions": [".tsx", ".jsx"] }],
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"js": "never",
				"jsx": "never",
				"ts": "never",
				"tsx": "never",
				"mjs": "never"
			}
		]
	}
}
